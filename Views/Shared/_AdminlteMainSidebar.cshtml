                </a>
            </li>


            <li class="header" style="font-size:15px;color:steelblue">Messages</li>

            <li class="@Html.IsSelected(controller: MainMenu.MessageRecu.ControllerName)">
                <a href="@MainMenu.MessageRecu.Path">
                    <i class="fa fa-envelope" style="font-size:20px;color:blueviolet" nav-icon"></i> <span>@MainMenu.MessageRecu.PageName</span>
                </a>
            </li>
            <li class="@Html.IsSelected(controller: MainMenu.MessagePersonnalise.ControllerName)">
                <a href="@MainMenu.MessagePersonnalise.Path">
                    <i class="fa fa-envelope" style="font-size:20px;color:greenyellow" nav-icon"></i> <span>@MainMenu.MessagePersonnalise.PageName</span>
                </a>
