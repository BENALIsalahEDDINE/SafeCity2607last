@model SafeCity2607last.Models.ApplicationUser
@inject SafeCity2607last.Data.ApplicationDbContext Context

@{
    UserProfile profile = Context.UserProfile.SingleOrDefault(x => x.ApplicationUserId.Equals(Model.Id));
}
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="@profile.ProfilePicture" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>@profile.FirstName @profile.LastName</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>

        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header" style="font-size:15px;color:steelblue">USER & ROLE</li>
            <li class="@Html.IsSelected(controller: MainMenu.User.ControllerName, action: MainMenu.User.ActionName)">
                <a href="@MainMenu.User.Path">
                    <i class="fa fa-users" style="font-size:20px;color:greenyellow" nav-icon"></i> <span>@MainMenu.User.PageName</span>
                </a>
            </li>
            <li class="@Html.IsSelected(controller: MainMenu.ChangePassword.ControllerName, action: MainMenu.ChangePassword.ActionName)">
                <a href="@MainMenu.ChangePassword.Path">
                    <i class="fa fa-key" style="font-size:20px;color:red"></i> <span>@MainMenu.ChangePassword.PageName</span>
                </a>
            </li>
            <li class="@Html.IsSelected(controller: MainMenu.Role.ControllerName, action: MainMenu.Role.ActionName)">
                <a href="@MainMenu.Role.Path">
                    <i class="fa fa-gear" style="font-size:20px;color:blueviolet" nav-icon"></i> <span>@MainMenu.Role.PageName</span>
                </a>
            </li>
            <li class="@Html.IsSelected(controller: MainMenu.ChangeRole.ControllerName, action: MainMenu.ChangeRole.ActionName)">
                <a href="@MainMenu.ChangeRole.Path">
                    <i class="fa fa-gear" style="font-size:20px;color:blue" nav-icon"></i> <span>@MainMenu.ChangeRole.PageName</span>
                </a>
            </li>

            <li class="header" style="font-size: 15px;color: steelblue">ADMIN</li>


            <li class="@Html.IsSelected(controller: MainMenu.Admin.ControllerName)">
                <a href="@MainMenu.Admin.Path">
                    <i class="fa fa-users" style="font-size:20px;color:blueviolet" nav-icon"></i> <span>@MainMenu.Admin.PageName</span>
                </a>
            </li>



            <li class="header" style="font-size:15px;color:steelblue">CONTROLEUR QUALITE</li>


            <li class="@Html.IsSelected(controller: MainMenu.ControleurdeQualité.ControllerName)">
                <a href="@MainMenu.ControleurdeQualité.Path">
                    <i class="fa fa-users" style="font-size:20px;color:lightblue" nav-icon"></i> <span>@MainMenu.ControleurdeQualité.PageName</span>
                </a>
            </li>
            <li class="header" style="font-size:15px;color:steelblue">CHERCHEUR</li>


            <li class="@Html.IsSelected(controller: MainMenu.Chercheur.ControllerName)">
                <a href="@MainMenu.Chercheur.Path">
                    <i class="fa fa-users" style="font-size:20px;color:forestgreen" nav-icon"></i> <span>@MainMenu.Chercheur.PageName</span>
                </a>
            </li>




            <li class="header" style="font-size:15px;color:steelblue">PUBLICATIONS ET PROPOSITIONS</li>




            <li class="@Html.IsSelected(controller: MainMenu.Publication.ControllerName)">
                <a href="@MainMenu.Publication.Path">
                    <i class="fa fa-gear" style="font-size:20px;color:cornflowerblue" nav-icon"></i> <span>@MainMenu.Publication.PageName</span>
                </a>
            </li>
            <li class="@Html.IsSelected(controller: MainMenu.Publications.ControllerName)">
