            <li class="@Html.IsSelected(controller: MainMenu.CommentairesdePublic.ControllerName)">
                <a href="@MainMenu.CommentairesdePublic.Path">
                    <i class="fa fa-gears" style="font-size:20px;color:peru" nav-icon"></i> <span>@MainMenu.CommentairesdePublic.PageName</span>
                </a>
            </li>

            <li class="header has-treeview" style="font-size:15px;color:steelblue">STATISTIQUES</li>

            <li class="@Html.IsSelected(controller: MainMenu.Statistiques.ControllerName)">
                <a href="@MainMenu.Statistiques.Path">
                    <i class="fa fa-pie-chart" style="font-size:20px;color:seagreen"></i> <span>@MainMenu.Statistiques.PageName</span>
                </a>
            </li>


        </ul>
    </section>
    <!-- /.sidebar -->
</aside>